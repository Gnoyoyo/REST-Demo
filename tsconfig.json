{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "jspm_packages",
        "typings",
        "tmp",
        "temp",
        "common",
        "tests"
    ]
}
